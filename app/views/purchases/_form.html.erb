<%= form_with(model: purchase) do |form| %>
  <% if purchase.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
        <% purchase.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :item_id, style: "display: block" %>
    <%= form.select :item_id, Item.all.pluck(:name,:id),{prompt:'select'}, {class: "form-control"}%>
  </div>

  <div>
    <%= form.label :customer_id, style: "display: block" %>
    <%= form.select :customer_id, Customer.all.pluck(:name,:id),{prompt:'select'}, {class: "form-control"}%>
  </div>

  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity, {class: "form-control"} %>
  </div>

  <div>
    <%= form.label :purchase_date, style: "display: block" %>
    <%= form.date_field :purchase_date, {class: "form-control"} %>
  </div>
  <br>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
