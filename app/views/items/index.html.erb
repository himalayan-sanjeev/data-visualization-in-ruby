<div class="container">
<p style="color: green"><%= notice %></p>

<h1 class="text-center">Items</h1>

<%= link_to "New product", new_item_path, class: "btn btn-success" %>
<hr>
<div id="items">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">S.N.</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <th scope="row"><%= item.id %></th>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= link_to "View", item_path(item), class:"btn btn-warning" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

</div>